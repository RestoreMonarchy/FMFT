@using FMFT.Web.Client.Models.Reservations.Exceptions
@using FMFT.Web.Client.Views.Components.AccountReservations.Cards

<Condition Evaluation="Exception is null">
    <Match>
        <LoadingView State="Auditorium">
            <ReservationCard Reservation="Reservation" Auditorium="Auditorium" />
        </LoadingView>
    </Match>
    <NotMatch>
        <Condition Evaluation="Exception is ReservationUnauthorizedException">
            <Match>
                You are not authorized to view this reservation
            </Match>
        </Condition>
        <Condition Evaluation="Exception is ReservationNotFoundException">
            <Match>
                Reservation could not be found
            </Match>
        </Condition>
    </NotMatch>
</Condition>