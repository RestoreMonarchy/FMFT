<div class="row">
    <div class="col-md-9">

    </div>
    <div class="col-md-3">
        <div class="bg-light border p-2">
            <div class="list-group">
                <Iterations Items="OrderItems" Context="orderItem">
                    <div class="list-group-item d-flex align-items-center">
                        <div>
                            @orderItem.ShowProduct.Name
                        </div>
                        <div class="small ms-auto">
                            <div>
                                @orderItem.ShowProduct.Price
                            </div>
                            <div>
                                <span>x</span>@orderItem.Quantity
                            </div>
                        </div>
                    </div>
                </Iterations>
            </div>
            

            <div class="d-flex align-items-center fw-bold">
                <div>
                    Do zapłaty
                </div>
                <div class="ms-auto">
                    @OrderState.TotalPrice.ToString("N2") zł
                </div>
            </div>
        </div>
    </div>
</div>
<div class="d-flex align-items-center">
    <div class="ms-auto">
        <button class="btn btn-primary" @onclick="CreateOrderTmp">
            Utwórz zamówienie (tmp)
        </button>
    </div>
</div>