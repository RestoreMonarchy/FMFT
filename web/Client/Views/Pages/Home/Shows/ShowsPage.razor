@page "/shows"

<Breadcrumb>
    <BreadcrumbItem Link="/">
        Home
    </BreadcrumbItem>
    <BreadcrumbItem Active="true">
        Przedstawienia
    </BreadcrumbItem>
</Breadcrumb>

<LoadingView @ref="LoadingView">
    <Condition Evaluation="ShowsResponse.IsSuccessful">
        <Match>
            <Iterations Items="ShowsResponse.Object">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@context.Name</h5>
                        <p class="card-text">@context.Description</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted">
                            @context.StartDateTime.LocalDateTime.ToString("f")
                        </li>
                    </ul>
                    <div class="card-body">
                        <a href="/shows/@context.Id" class="btn btn-sm btn-secondary">
                            <i class="fa-solid fa-info me-1"></i> Szczegóły
                        </a>
                        <a href="/shows/@context.Id/reserve" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-ticket me-1"></i> Zarezerwuj
                        </a>
                    </div>
                </div>
            </Iterations>
        </Match>
        <NotMatch>
            <ErrorResponseAlert />
        </NotMatch>
    </Condition>
</LoadingView>