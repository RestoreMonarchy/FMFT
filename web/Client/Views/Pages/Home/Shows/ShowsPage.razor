@page "/shows"
@using FMFT.Web.Client.Views.Shared.Components.Lists.Shows

<MainLayoutBody>
    <Breadcrumb>
        <BreadcrumbItem Link="/">
            Home
        </BreadcrumbItem>
        <BreadcrumbItem Active="true">
            Wydarzenia
        </BreadcrumbItem>
    </Breadcrumb>

    <LoadingView @ref="LoadingView">
        <Condition Evaluation="ShowsResponse.IsSuccessful">
            <Match>
                <ShowsList Shows="Shows" />
            </Match>
            <NotMatch>
                <ErrorResponseAlert />
            </NotMatch>
        </Condition>
    </LoadingView>
</MainLayoutBody>