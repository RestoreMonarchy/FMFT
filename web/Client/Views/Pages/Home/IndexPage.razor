@page "/"
@using FMFT.Web.Client.Views.Shared.Components.Lists.Shows
@using FMFT.Web.Client.Views.Shared.Layouts.Main;

@layout MainLayout

<div class="text-center mb-3 w-100 home-header">
    <div class="fs-3 text-white container">
        <img src="/img/navbar_brand.svg" class="img-fluid home-header-logo" />
        @Configuration["HomeTitle"]
    </div>
</div>

<MainLayoutBody>
    <div class="mb-3">
        <div class="fs-4 mb-2">
            Przedstawienia
        </div>
        <div>
            <LoadingView @ref="ShowsLoadingView">
                <Condition Evaluation="ShowsResponse.IsSuccessful">
                    <Match>
                        <ShowsList Shows="Shows" />
                    </Match>
                    <NotMatch>
                        <ErrorResponseAlert />
                    </NotMatch>
                </Condition>
            </LoadingView>
        </div>
    </div>
</MainLayoutBody>