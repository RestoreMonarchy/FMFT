@page "/account/login"

@using FMFT.Web.Client.Views.Shared.Components.Bodies
@using FMFT.Web.Client.Views.Shared.Components.Forms
@using FMFT.Web.Client.Views.Shared.Layouts.Account

@layout AccountLayout

<AccountLayoutBody>
    <Header>
        Login
    </Header>
    <Content>

        <LoginForm OnSuccess="OnSuccessfullLoginAsync" />

        <div class="my-2 text-start small">
            <div>
                Don't have account yet?
                <a class="text-decoration-none" href="/account/register">
                    Register
                </a>
            </div>
            <div>
                Forgot your password?
                <a class="text-decoration-none" href="/account/requestresetpassword">
                    Reset Password
                </a>
            </div>
        </div>

    </Content>
    <Footer>
        <div class="d-flex">
            <div class="small">
                <a href="/" class="text-decoration-none">
                    <i class="bi bi-house-door"></i> Go to homepage
                </a>
            </div>
        </div>
    </Footer>
</AccountLayoutBody>