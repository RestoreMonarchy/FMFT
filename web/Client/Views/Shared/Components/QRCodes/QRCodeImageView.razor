@using FMFT.Web.Client.Models;

<img src="@GetImageDataUrl()" class="@Class" />

@code {
    const string format = "data:{0};base64,{1}";

    [Parameter]
    public QRCodeImage QRCodeImage { get; set; }

    [Parameter]
    public string Class { get; set; }

    private string GetImageDataUrl()
    {
        return string.Format(format, QRCodeImage.ContentType, Convert.ToBase64String(QRCodeImage.Data));
    }
}
