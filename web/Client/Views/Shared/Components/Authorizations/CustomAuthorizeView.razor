<Condition Evaluation="IsAuthorized()">
    <Match>
        <Condition Evaluation="IsConfirmedEmail()">
            <Match>
                @Authorized(UserAccountState.UserAccount)
            </Match>
            <NotMatch>
                @NotConfirmedEmail(UserAccountState.UserAccount)
            </NotMatch>
        </Condition>        
    </Match>
    <NotMatch>
        @NotAuthorized
    </NotMatch>
</Condition>