@using FMFT.Web.Client.Models.Auditoriums.Exceptions
@using FMFT.Web.Client.Models.Reservations.Exceptions
@using FMFT.Web.Client.Views.Components.Reservations.Cards

<Condition Evaluation="Exception is null">
    <Match>
        <LoadingView State="Reservation">
            <div class="mb-3">
                <ReservationInfoCard Reservation="Reservation" Auditorium="Auditorium" />
            </div>
            <div>
                <ReservationActionsCard>
                    wip
                </ReservationActionsCard>
            </div>
        </LoadingView>
    </Match>
    <NotMatch>
        <Condition Evaluation="Exception is ReservationNotFoundException">
            <Match>
                Reservation could not be found
            </Match>
        </Condition>
        <Condition Evaluation="Exception is AuditoriumNotFoundException">
            <Match>
                Auditorium could not be found
            </Match>
        </Condition>
    </NotMatch>
</Condition>