<LoadingView State="Shows">
    <Iterations Items="Shows">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@context.Name</h5>
                <p class="card-text">@context.Description</p>                   
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted">
                    @context.StartDateTime.LocalDateTime
                </li>
            </ul>
            <div class="card-body">
                <a href="/shows/@context.Id" class="card-link">Reserve Seat</a>
            </div>
        </div>
    </Iterations>
</LoadingView>

