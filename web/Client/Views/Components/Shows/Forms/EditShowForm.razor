<AlertGroupBase @ref="AlertGroup">
    <AlertBase @ref="AuditoriumNotFoundAlert" Class="alert-danger">
        Selected auditorium does not exist
    </AlertBase>
    <AlertBase @ref="SuccessAlert" Class="alert-success">
        Successfully updated the show!
    </AlertBase>
</AlertGroupBase>

<FormBase @ref="Form">

    <div class="mb-2">
        <span class="form-label">Public Id</span>
        <TextInputBase @ref="PublicIdInput" @bind-Value="Params.PublicId" Class="form-control" />
    </div>
    <div class="mb-2">
        <span class="form-label">Name</span>
        <TextInputBase @ref="NameInput" @bind-Value="Params.Name" Class="form-control" />
    </div>
    <div class="mb-2">
        <span class="form-label">Auditorium</span>
        <SelectBase @bind-Value="Params.AuditoriumId">
            <option value="333">asds</option>
            <Iterations Items="Auditoriums">
                <option value="@context.Id">
                    @context.Name
                </option>
            </Iterations>
        </SelectBase>
    </div>
    <div>
        <ButtonBase @ref="SubmitButton" Class="btn btn-primary text-start" OnClick="SubmitUpdateShowAsync">
            Update
        </ButtonBase>
    </div>
</FormBase>