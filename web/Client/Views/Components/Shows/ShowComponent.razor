@using FMFT.Web.Client.Views.Components.Shows.Selectors
@using FMFT.Web.Shared.Models.Auditoriums.Exceptions
@using FMFT.Web.Shared.Models.Shows.Exceptions

<Condition Evaluation="Exception == null">
    <Match>
        <LoadingView State="Show">
            <div class="card mb-3">
                <div class="card-header">
                    Show Information
                </div>
                <div class="card-body">
                    <h4 class="card-title">@Show.Name</h4>
                    <p class="card-text">@Show.Description</p>
                    <div>Auditorium: @Auditorium.Name</div>    
                </div>
                
            </div>
            <div class="card">
                <div class="card-header">
                    Seat Reservation
                </div>
                <div class="card-body">
                    Select the seats you would like to reserve
                    <div>
                        <div class="d-flex align-items-center mb-2">
                            <div class="seat">
                                <div class="seat-text">
                                    N
                                </div>                                
                            </div>
                            <div class="ms-2">
                                - Free Seat
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="seat seat-busy">
                                <div class="seat-text">
                                    N
                                </div>                                
                            </div>
                            <div class="ms-2">
                                - Busy Seat
                            </div>
                        </div>
                    </div>
                </div>
                <SeatSelector Auditorium="Auditorium" />
                <div class="card-body">
                    Summary:
                    <ul>
                        <li>x2 Seats</li>
                    </ul>
                    <button class="btn btn-primary">
                        Reserve
                    </button>
                </div>
            </div>
            
        </LoadingView>
    </Match>
    <NotMatch>
        <Condition Evaluation="this.Exception is ShowNotFoundException">
            <Match>
                Show with the specified Id could not be found
            </Match>
        </Condition>
        <Condition Evaluation="this.Exception is AuditoriumNotFoundException">
            <Match>
                Auditorium for this show doesn't exist
            </Match>
        </Condition>
    </NotMatch>
</Condition>